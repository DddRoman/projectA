{
  "name": "arkit",
  "version": "1.0.4",
  "description": "A CLI tool to visualise project architecture",
  "main": "index.ts",
  "scripts": {
    "compile": "tsc --project .",
    "lint": "tslint --project .",
    "build-schema": "typescript-json-schema src/config.ts ConfigSchema --required true --id 'https://cdn.jsdelivr.net/gh/dyatko/arkit@master/schema.json#' -o schema.json",
    "build": "npm run compile && npm run build-schema",
    "test": "jest"
  },
  "engines": {
    "node": ">= 6.16.0"
  },
  "bin": {
    "arkit": "index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dyatko/arkit.git"
  },
  "author": "Marat Dyatko <i@marat.by>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dyatko/arkit/issues"
  },
  "homepage": "https://github.com/dyatko/arkit#readme",
  "devDependencies": {
    "@types/jest": "^24.0.4",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^10.12.19",
    "@types/pino": "^5.8.5",
    "@types/resolve": "0.0.8",
    "jest": "^24.1.0",
    "prettier": "^1.16.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript-json-schema": "^0.35.0"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "minimatch": "^3.0.4",
    "pino": "^5.11.1",
    "pino-debug": "^1.2.0",
    "pino-pretty": "^2.5.0",
    "plantuml-encoder": "^1.2.5",
    "resolve": "^1.10.0",
    "ts-morph": "^1.1.0",
    "tsconfig-paths": "^3.8.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "keywords": [
    "architecture",
    "uml",
    "diagram",
    "typescript",
    "javascript",
    "plantuml",
    "ts",
    "js",
    "component",
    "cli",
    "generate"
  ]
}
